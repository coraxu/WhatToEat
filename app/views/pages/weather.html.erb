<% provide(:title, "Weather") %>
<h1>Weather</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:page, url: weather_path) do |f| %>
      <%= radio_button_tag(:weather, "Sunny") %>
	  <%= label_tag(:weather_sunny, "Current weather is sunny") %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>